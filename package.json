{
  "name": "js-async-tutorial",
  "version": "1.0.0",
  "description": "JS async code tutorial: from callbacks to async/await",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "test-raw": "npm run lint && mocha --recursive tests",
    "test": "cross-env RUN_ALL=true npm run test-raw",
    "test-callback": "cross-env RUN_CALLBACK=true npm run test-raw",
    "test-async-await": "cross-env RUN_ASYNC_AWAIT=true npm run test-raw",
    "test-promise": "cross-env RUN_PROMISE=true npm run test-raw",
    "lint": "standard --verbose | snazzy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pierreroth64/js-async-tutorial.git"
  },
  "standard": {
    "env": {
      "node": "true",
      "mocha": "true"
    },
    "parser": "babel-eslint"
  },
  "keywords": [
    "callback", "promise", "async/await", "tutorial"
  ],
  "author": "Pierre Roth",
  "license": "No-License (see LICENSE file)",
  "bugs": {
    "url": "https://github.com/pierreroth64/js-async-tutorial/issues"
  },
  "homepage": "https://github.com/pierreroth64/js-async-tutorial#readme",
  "devDependencies": {
    "babel-eslint": "^7.2.0",
    "cross-env": "^3.2.4",
    "mocha": "^3.2.0",
    "request": "^2.81.0",
    "snazzy": "^6.0.0",
    "standard": "^9.0.2"
  }
}
